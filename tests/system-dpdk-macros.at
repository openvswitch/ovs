m4_define([CONFIGURE_VETH_OFFLOADS],
    [AT_CHECK([ethtool -K $1 tx off], [0], [ignore], [ignore])
     AT_CHECK([ethtool -K $1 txvlan off], [0], [ignore], [ignore])]
)
