m4_define([OVSDB_SERVER_SHUTDOWN],
  [OVS_APP_EXIT_AND_WAIT_BY_TARGET([ovsdb-server], [ovsdb-server.pid])])

m4_define([OVSDB_SERVER_SHUTDOWN2],
