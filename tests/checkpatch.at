try_checkpatch \
   "Author: A
    
    Signed-off-by: A
    ---
    diff --git a/A.c b/A.c
    index 0000000..1111111 100644
    --- a/A.c
    +++ b/A.c
    @@ -1,1 +1,1 @@
    +     $ctr (first_run) {
    "

try_checkpatch \
   "Author: A

    Signed-off-by: A
    ---
    diff --git a/A.c b/A.c
    index 0000000..1111111 100644
    --- a/A.c
    +++ b/A.c
    @@ -1,1 +1,1 @@
    +     $ctr ( first_run) {
    " \
    "ERROR: Improper whitespace around control block
    #8 FILE: A.c:1:
         $ctr ( first_run) {
"

try_checkpatch \
   "Author: A

    Signed-off-by: A
    ---
    diff --git a/A.c b/A.c
    index 0000000..1111111 100644
    --- a/A.c
