    except:
        pass


def sha256(d):
    m = hashlib.sha256()
    if 'filename' in d:
        f = open(d['filename'])
        data = f.read(1024)
        while len(data) > 0:
            m.update(data)
            data = f.read(1024)
        f.close()
    elif 'output' in d:
        m.update(d['output'].getvalue())
    return m.hexdigest()


def construct_filename(k, v):
    if 'filename' in v:
        if v['filename'][0] == '/':
            return v['filename'][1:]
        else:
            return v['filename']
    s = k.replace(' ', '-')
    s = s.replace('--', '-')
    s = s.replace('/', '%')
    if s.find('.') == -1:
        s += '.out'

    return s


